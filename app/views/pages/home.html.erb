
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/1600x900/?dogs);">
  <div class="container">
    <h1>PetsBnB takes the <strong>best care</strong> for your pet!
    <p>Find places for your pet all over the world.</p>
    <%= link_to "Book now", flats_path, class: "btn btn-flat" %>
  </div>
</div>



<div class="container">
  <div class="row my-3">
    <div class="col">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" />
            <button name="button" type="submit" class="btn btn-flat">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
      <% end %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col text-left">
      <h3>Your pet will have an awesome stay</h3>
    </div>
  </div>
  <div class="row mb-3">
       <div class="col-sm col-md-6 col-lg flex-grow">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?backyards)">
          Backyards
        </div>
      </div>
      <div class="col-sm col-md-6 col-lg flex-grow">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?beach)">
          Beachs for pets
        </div>
      </div>
      <div class="col-sm col-md-6 col-lg flex-grow">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?cats)">
          Catlovers
        </div>
      </div>
      <div class="col-sm col-md-6 col-lg flex-grow">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?countryside)">
          Countryside
        </div>
      </div>
  </div>
</div>

</div>
