<div class="container">

 

<!-- description / reserva -->
<div class="container">
  <!-- info-anfitrion -->
  
  <div class="row">
    <div class="col-sm-12 col-md-7">
     <div class="row">
    <div class="col mt-4">
      <h2>
        <%= @flat.title%>
      </h2>
    </div>
  </div>
  <!-- img -->
  <div class="card-columns">
    <% @flat.photos.each do |photo| %>
      <div class="card">
        <%= cl_image_tag photo.key, height: 150, width: 250, crop: :thumb %>
      </div>
    <% end %>
  </div>
      <div class="row mt-4">
        <div class="col-10">
          <h3><%= @flat.user.first_name.capitalize %> <%= @flat.user.last_name.capitalize %></h3>
        </div>
        <div class="col-2">
        <% if !@flat.user.avatar.attached? %>
          <%= image_tag "https://thumbs.dreamstime.com/b/default-avatar-profile-vector-user-profile-default-avatar-profile-vector-user-profile-profile-179376714.jpg", class: "avatar-bordered  dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= cl_image_tag @flat.user.avatar, class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
        <% end %>
                 
        </div>
      </div>
      <div class="row">
      <div class="col">
        <div class="description-house pt-2">
          <%= @flat.description%>
        </div>
        </div>
      </div>
      <div class="row mt-4">

        <div class="reviews">
          <!-- reviews -->
         

        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-5">
      <div class="booking-card">
       <!-- card-reservas -->
      <div class="container">
          <%= render "./bookings/form"%>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
