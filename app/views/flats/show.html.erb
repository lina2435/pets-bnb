<div class="container">

  <div class="row">
    <div class="col">
      <h2>
        <%= @flat.title%>
      </h2>
    </div>
  </div>
  <!-- img -->
  <div class="card-columns">
    <% @flat.photos.each do |photo| %>
      <div class="card">
        <%= cl_image_tag photo.key, height: 150, width: 250, crop: :thumb %>
      </div>
    <% end %>
  </div>

<!-- description / reserva -->
<div class="container">
  <!-- info-anfitrion -->
  <div class="row">
    <div class="col-8">
      <div class="row mt-4">
        <div class="col-8 p-0">
          <h3>Anfitrion</h3>
        </div>
        <div class="col">
          <img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
        </div>
      </div>
      <div class="row">
        <div class="description-house pt-2">
          <%= @flat.description%>
        </div>
      </div>
      <div class="row mt-4">

        <div class="servicios">
          <!-- servicios -->

        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="booking-card">
       <!-- card-reservas -->
      <div class="container">
          <%= render "./bookings/form"%>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
